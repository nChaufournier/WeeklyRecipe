<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:padding="16dp"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:textColor="@color/secondaryTextColor"
            android:id="@+id/tv_rating"
            android:textSize="14sp"
            android:text="Rating"
            android:paddingTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textColor="@color/textColor"
            android:id="@+id/tv_recipeName"
            android:text="Recipe Name"
            android:textSize="24sp"
            android:layout_below="@id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:contentDescription="Image of Food"
            android:id="@+id/iv_mainImage"
            android:background="#CCCCCC"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>
    <TextView
        android:layout_below="@+id/rl_title"
        android:id="@+id/tv_description"
        android:textColor="@color/textColor"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:textSize="14sp"
        android:text="@string/lorem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rl_actionButtons"
        android:padding="8dp"
        android:layout_below="@+id/tv_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_action1"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/secondaryTextColor"
            android:text="Action 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_toEndOf="@+id/btn_action1"
            android:layout_toRightOf="@+id/btn_action1"
            android:id="@+id/btn_action2"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/secondaryTextColor"
            android:text="Action 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_expand"
            android:id="@+id/btn_more"
            style="?android:attr/borderlessButtonStyle"
            android:text="^"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</RelativeLayout>