<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ll_top"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="@color/primaryColor">
        <ImageButton
            android:src="@drawable/ic_action_cancel"
            android:textColor="@color/primaryTextColor"
            android:id="@+id/btn_close"
            android:background="@android:color/transparent"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/primaryTextColor"
            android:id="@+id/btn_save"
            android:paddingTop="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrolView"
        android:layout_below="@+id/ll_top"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="48dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_addTitle"
        android:text="Add Recipe"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="48dp" />

    <EditText
        android:id="@+id/et_recipeName"
        android:hint="Recipe Name"
        android:textSize="18sp"
        android:layout_below="@+id/tv_addTitle"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:inputType="textCapWords"/>
    <EditText
        android:id="@+id/et_difficulty"
        android:hint="Recipe Difficulty"
        android:textSize="18sp"
        android:layout_below="@+id/et_recipeName"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:inputType="number"/>
    <EditText
        android:id="@+id/et_rating"
        android:hint="Recipe Rating"
        android:textSize="18dp"
        android:layout_below="@+id/et_difficulty"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:inputType="number"/>
    <EditText
        android:id="@+id/et_description"
        android:hint="Recipe Description"
        android:textSize="18sp"
        android:layout_below="@+id/et_rating"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:inputType="textCapSentences|textMultiLine"/>
    <EditText
        android:id="@+id/et_time"
        android:hint="Time Taken to Make"
        android:textSize="18sp"
        android:layout_below="@+id/et_description"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:inputType="number"/>
    <EditText
        android:id="@+id/et_ingredients"
        android:hint="Recipe Ingredients"
        android:textSize="18sp"
        android:layout_below="@+id/et_time"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:inputType="textCapSentences"/>
    <EditText
        android:id="@+id/et_mainIngredient"
        android:hint="Main Ingredient"
        android:textSize="18sp"
        android:layout_below="@+id/et_ingredients"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:inputType="textCapSentences"/>
    <EditText
        android:id="@+id/et_image"
        android:hint="Recipe Image"
        android:textSize="18sp"
        android:layout_below="@+id/et_mainIngredient"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:inputType="textCapSentences"/>
    <EditText
        android:id="@+id/et_comment"
        android:hint="Recipe Comment"
        android:textSize="18sp"
        android:layout_below="@+id/et_image"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:inputType="textCapSentences|textMultiLine"/>
    <EditText
        android:id="@+id/et_favorite"
        android:hint="Favorite?"
        android:textSize="18sp"
        android:layout_below="@+id/et_comment"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:inputType="number"/>


    </RelativeLayout>
    </ScrollView>
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_view"
        style="?android:attr/borderlessButtonStyle"
        android:text="View"
        android:background="@color/textColor"
        android:layout_width="fill_parent"
        android:layout_height="48dp" />


</RelativeLayout>